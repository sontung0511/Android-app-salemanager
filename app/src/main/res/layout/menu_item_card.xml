<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:layout_marginBottom="2dp"
    android:background="@color/purple_200"
    android:padding="5dp">

    <ImageView
        android:id="@+id/fd_image"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@drawable/z_menu_item_img"
        android:scaleType="centerInside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/item_default_36" />

    <TextView
        android:id="@+id/fd_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/fd_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/fd_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/fd_image"
        app:layout_constraintTop_toBottomOf="@+id/fd_name" />

    <ImageButton
        android:id="@+id/addtoCart"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cart_24"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="8dp"
        android:text="VNĐ"
        android:textSize="12sp"
        app:layout_constraintStart_toEndOf="@+id/fd_price"
        app:layout_constraintTop_toBottomOf="@+id/fd_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
